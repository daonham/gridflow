{
	"apiVersion": 2,
	"name": "gridflow/image",
	"category": "gridflow",
	"attributes": {
		"url": {
			"type": "string",
			"source": "attribute",
			"selector": "img",
			"attribute": "src"
		},
		"alt": {
			"type": "string",
			"source": "attribute",
			"selector": "img",
			"attribute": "alt",
			"default": ""
		},
		"caption": {
			"type": "string",
			"source": "html",
			"selector": "figcaption"
		},
		"id": {
			"type": "number"
		},
		"enableCaption": {
			"type": "boolean",
			"default": false
		},
		"linkType": {
			"type": "string"
		},
		"links": {
			"type": "object"
		},
		"textAligns": {
			"type": "object"
		},
		"width": {
			"type": "object"
		},
		"height": {
			"type": "object"
		},
		"objectFit": {
			"type": "object"
		},
		"objectPosition": {
			"type": "object"
		},
		"overlay": {
			"type": "number"
		},
		"bgOverlay": {
			"type": "string"
		},
		"border": {
			"type": "object"
		},
		"borderRadius": {
			"type": "object"
		},
		"boxShadow": {
			"type": "object"
		},
		"overlayHover": {
			"type": "number"
		},
		"bgOverlayHover": {
			"type": "string"
		},
		"transition": {
			"type": "number"
		},
		"hoverEffect": {
			"type": "string"
		},
		"font": {
			"type": "string"
		},
		"gridflowFont": {
			"type": "object",
			"default": {
				"1": {
					"name": "font",
					"weight": "fontWeight"
				}
			}
		},
		"fontSize": {
			"type": "object"
		},
		"lineHeight": {
			"type": "object"
		},
		"fontWeight": {
			"type": "string"
		},
		"decoration": {
			"type": "string"
		},
		"transform": {
			"type": "string"
		},
		"fontStyle": {
			"type": "string"
		},
		"letterSpacing": {
			"type": "object"
		},
		"captionTextAligns": {
			"type": "object"
		},
		"captionSpacing": {
			"type": "object"
		}
	},
	"style": "gridflow-button"
}
